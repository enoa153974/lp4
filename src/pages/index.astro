---
import siteData from '../../siteData.mjs';
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Features from '../components/Features.astro';
import Products from '../components/Products.astro';
import FeaturesCase from '../components/FeaturesCase.astro';
import News from '../components/News.astro';

const pageId = 'home',
    pageMeta = siteData[pageId],
    ldJSON = [
        {
            '@type': 'ListItem',
            position: 1,
            item: {
                '@id': `${import.meta.env.PUBLIC_ENVURL}`,
                name: 'HOME'
            }
        }
    ];
---

<!--BaseLayout.hemlの<slot />内に代入される -->
<BaseLayout
    pageName={pageId}
    title={pageMeta.title}
    description={pageMeta.description}
    ogpImage={pageMeta.ogpImage}
    type={pageMeta.type}
    path={pageMeta.path}
    ldJSON={ldJSON}
>
    <Hero />

    <About
        title="私たちについて"
        subtitle="About Us"
        items={[
            {
                image: '/assets/image/about_us_img.jpg',
                alt: '',
                pointTitle:
                    'キラメキファームは、これからの農業を次世代の子どもたちに残すために創設されたイノベーションカンパニーです。',
                text: 'キラメキファームは革新的デザインと最新技術を活用した農業機器メーカーです。未来の農業を実現するために、ビッグデータを駆使して省エネルギー・効率化を実現し、自動運転技術を搭載したロボットで一年中稼働することができる機器を提供します。リジェネラティブ農業を実現する技術を用いて、持続可能な農業システムをサポートします。私たちの社是は、次世代の子供たちに豊かな地球環境を残すこと。イノベーションを起こすことで農業に新たな価値を生み出し、地球環境保全に貢献することを目指しています。'
            }
        ]}
    />

    <Features />
    <Products />
    <FeaturesCase />
    <News
        text="お知らせ"
        subtitle="News"
        buttonHref="/news"
        newsItems={[
            {
                date: '2023.05.15',
                category: 'お知らせ',
                title: '都心で発見！キラメキファームの屋上畑で緑のオアシスが広がる'
            },
            {
                date: '2023.04.05',
                category: 'ニュースリリース',
                title: '食の安全を守る！キラメキファーム、農産物の品質管理に力を入れる'
            },
            {
                date: '2023.03.12',
                category: 'ニュースリリース',
                title: '害虫撃退！キラメキファームの自然環境に優しい取り組み'
            },
                        {
                date: '2023.04.05',
                category: 'お知らせ',
                title: 'キラメキファーム×最新ドローン技術 目覚ましい成果発表'
            },
                        {
                date: '2023.02.01',
                category: 'ニュースリリース',
                title: 'キラメキファーム、無農薬野菜で子供たちの未来を支える'
            },
                        {
                date: '2023.01.08',
                category: 'お知らせ',
                title: 'キラメキ農法で収穫量2倍！革新的な農業技術が話題'
            },
        ]}
    />
    
</BaseLayout>

---
import siteData from '../../siteData.mjs';
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSpec from '../components/HeroSpec.astro';
import Gallery from '../components/Gallery.astro';
import FeaturesSpec from '../components/FeaturesSpec.astro';
import Price from '../components/Price.astro';
import Contact from '../components/Contact.astro';

const pageId = 'spec',
    pageMeta = siteData[pageId],
    ldJSON = [
        {
            '@type': 'ListItem',
            position: 2,
            item: {
                '@id': `${import.meta.env.PUBLIC_ENVURL}${pageMeta.path}`,
                name: 'spec'
            }
        }
    ];

const currentPath = '/spec'; 

//表の配列
const droneData = [
    { heading: 'ドローン名', text: 'アグリ・ファルコン' },
    { heading: '製品番号', text: 'AGF-100' },
    { heading: '飛行時間', text: '60 分' },
    { heading: '最大積載量', text: '5 kg' },
    { heading: '操作距離', text: '3 km' },
    { heading: '機体重量', text: '8 kg' },
    { heading: '機体寸法', text: '150 x 150 x 40 cm' },
    { heading: '機能・特徴', text: '自動操縦、植物生育モニタリング、農薬散布' }
];
---

<!--BaseLayout.hemlの<slot />内に代入される -->
<BaseLayout
    pageName={pageId}
    title={pageMeta.title}
    description={pageMeta.description}
    ogpImage={pageMeta.ogpImage}
    type={pageMeta.type}
    path={pageMeta.path}
    ldJSON={ldJSON}
    currentPath={currentPath}
>
    <HeroSpec />
    <Gallery
        title="ギャラリー"
        gallerys={[
            {
                image: '/assets/image/gallery_pht_01.jpg',
                alt: ''
            },
            {
                image: '/assets/image/gallery_pht_02.jpg',
                alt: ''
            },
            {
                image: '/assets/image/gallery_pht_03.jpg',
                alt: ''
            }
        ]}
    />
    <FeaturesSpec />
    <Price droneData={droneData} />
    <Contact />
</BaseLayout>

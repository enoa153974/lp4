---
interface Props {
    title: string;
    items: FaqItem[];
}
interface FaqItem {
    question: string;
    category01:string;
    category02:string;
    answer: string;
}

const { title, items } = Astro.props as Props;

import AccordionItem from './FaqAccordionItem.astro';
import '../styles/components/accordion.css';
---

<section class="faq-section l-container pt-20 pb-10">
    <h2 class="faq-section__heading text-center">
        <span class="en block">{title}</span>
    </h2>

    <div class="faq-section__inner l-inner">
        {items.map((item) => <AccordionItem question={item.question} answer={item.answer} category01={item.category01} category02={item.category02}/>)}
    </div>
</section>


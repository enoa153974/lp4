---
// components/News.astro
import NewsItem from './NewsItem.astro';
import Button from './Button';

interface NewsItemData {
    date: string;
    category: string;
    title: string;
}

interface Props {
    text: string;
    subtitle:string;
    newsItems: NewsItemData[];
    buttonHref: string;
}

const { text, subtitle ,newsItems, buttonHref } = Astro.props;
---

<div class="news l-wrapper items-center pt-12 px-0 pb-16 sm:pt-0 pb-0">
    <div class="news__container l-container flex flex-col items-center sm:pt-14">
        <p class="text-center color-text-sub font-semibold en">{subtitle}</p>
        <h2 class="news__heading mb-6 font-bold sm:mb-4">{text}</h2>

        <div class="news-list w-full mb-8 sm:mb-6">
            {newsItems.map((item) => <NewsItem {...item} />)}
        </div>

        <Button href={buttonHref} className="news__btn" variant="push">
            <span>ニュース一覧へ</span>
        </Button>
    </div>
</div>

<style>
    .news {
        height: auto;
    }
    .news-list {
        width: 100%;
    }
    .news__container{
        max-width:980px;
    }
    .news__container>p{
        font-size: 20px;
    }

    @media screen and (max-width: 767px) {
        .news {
            height: auto;
        }

            .news__container>p{
           font-size: 1rem;
    }
    
    .news__heading{
    font-size: var(--font-size-lg)
    }
    }
</style>

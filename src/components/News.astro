---
// components/News.astro
import NewsItem from './NewsItem.astro';
import Button from './Button';

interface NewsItemData {
    date: string;
    category: string;
    title: string;
}

interface Props {
    text: string;
    subtitle:string;
    newsItems: NewsItemData[];
    buttonHref: string;
}

const { text, subtitle ,newsItems, buttonHref } = Astro.props;
---

<div class="news l-wrapper items-center">
    <div class="news__container l-container flex flex-col items-center">
        <p class="text-center color-text-sub font-bold en">{subtitle}</p>
        <h2 class="mb-6 font-bold">{text}</h2>

        <div class="news-list w-full mb-8">
            {newsItems.map((item) => <NewsItem {...item} />)}
        </div>

        <Button href={buttonHref} className="news__btn" variant="push">
            <span>ニュース一覧へ</span>
        </Button>
    </div>
</div>

<style>
    .news {
        height: auto;
        padding: 3rem 0;
    }
    .news-list {
        width: 100%;
    }
    .news__container{
        max-width:1000px;
    }
    .news__container>p{
        font-size: 20px;
    }

    @media screen and (max-width: 767px) {
        .news {
            height: auto;
            padding: 24px 0;
        }
    }
</style>

---
interface Props {
    title: string;
    subtitle: string;
    voices: Voice[];
}
interface Voice {
    name: string;
    comment: string;
    image: string;
}

const { title, subtitle, voices } = Astro.props as Props;
---

<section class="voices flex flex-col">
    <h2 class="voices__heading text-center">
        <span class="en block">{title}</span>
        <span class="block">{subtitle}</span>
    </h2>

    <div class="slider flex items-center justify-center">
        <div class="slider__wrapper flex flex-col">
            <button type="button" class="slick-prev" aria-label="前へ"><i class="fa-solid fa-arrow-left"></i></button>

            <div class="slider__track autoplay sm:justify-center">
                {
                    voices.map((voice: Voice, i: number) => (
                        <div class="card flex flex-col">
                            <div class="avatar__wrapper block">
                                <img src={voice.image} alt={`お客様${voice.name}の声`} class="avatar-01 block" />
                            </div>
                            <p class="text-center">{voice.name}</p>
                            <p class="text-center">{voice.comment}</p>
                        </div>
                    ))
                }
            </div>

            <button type="button" class="slick-next" aria-label="次へ"><i class="fa-solid fa-arrow-right"></i></button>
        </div>

        <div class="slider__dots flex justify-center items-center"></div>
    </div>
</section>

<style>
    .voices {
        width: 100%;
        height: auto;
        padding-top: 5rem;
        padding-bottom: 5rem;
    }

    .voices .voices__heading span {
        padding: 0;
        font-size: 2.8125rem;
        font-weight: var(--font-weight-bold);
        line-height: 1.2;
        letter-spacing: 0.05em;
    }

    .voices .voices__heading span:last-child {
        font-size: 1.875rem;
        font-weight: var(--font-weight-semibold);
        line-height: 2.4;
        letter-spacing: 0.06em;
    }

    @media screen and (width <=47.9375rem) {
        .voices {
            width: 100%;
            height: auto;
            padding-top: 3.125rem;
            padding-bottom: 0;
        }

        .voices .voices__heading span {
            font-size: 1.875rem;
        }

        .voices__heading span:last-child {
            font-size: 1rem;
        }

        .voices__slide {
            max-width: 24.375rem;
        }
    }
</style>

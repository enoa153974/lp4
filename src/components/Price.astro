---
import Table from './Table.astro';

interface Props {
    droneData: { heading: string; text: string }[];
}

const { droneData } = Astro.props;
---

<section class="price l-wrapper">
    <div class="price__container l-container pt-10 px-1 pb-18">
        <div class="l-inner">
            <h2 class="font-bold u-heading-line mb-4">メーカー希望小売価格</h2>
            <p class="en font-bold mb-12"><span class="jp font-bold">￥</span>550,000<span class="tax-label font-bold">（税込）</span></p>
            <h2 class="font-bold u-heading-line">スペック</h2>
            <div class="px-8">
                <h3 class="font-bold u-border-left my-6">機体</h3>
                <Table tableData={droneData} />
            </div>
        </div>
    </div>
</section>

<style>
    .price__container {
        max-width: 1180px;
    }
    p{
        font-size: var(--font-size-xl2);
    }

    .tax-label{
        font-size: var(--font-size-base);
    }

</style>
---
// components/NewsItem.astro
interface Props {
    date: string;
    category: string;
    title: string;
}

const { date, category, title } = Astro.props;
const categoryClass = category === 'ニュースリリース' ? 'badge--release' : 'badge--notice';
---

<div class="news-item flex items-center pt-4 px-2 pb-4 sm:pt-3 sm:pb-3 sm:px-0">
    <div class="news-item__inner flex items-center">
        <div class="news-date font-bold">{date}</div>
        <span class={`news-badge text-center ${categoryClass}`}>{category}</span>
    </div>
    <div class="news-title font-bold pl-2">{title}</div>
</div>


<style>
    .news-item {
        gap: 16px;
        border-top: 0.01px solid #ddd;
        border-bottom: 0.01px solid #ddd;
    }
    .news-item__inner{
        width: 25%;
        gap: 1rem;
    }
    .news-date {
        color: #666;
        font-size: 14px;
    }
    .news-badge {
        display: inline-block;
        font-size: 13px;
        padding: 4px;
        border-radius: 4px;
        color: white;
        width: 100%;
    }
    .badge--notice {
        background-color: #473221;
    }
    .badge--release {
        background-color: #473221;
    }
    .news-title {
        flex: 1;
        color:var(--text-color-sub);
        font-size: 15px;
    }
@media (max-width: 767px) {
    .news-item {
        flex-direction: column;
        align-items: flex-start;
    }

    .news-item__inner{
        display: flex;
        width: 100%;
    }
    .news-badge  {
        width:37%;
    }
    .news-title {
        padding: 0;
    }
}
</style>
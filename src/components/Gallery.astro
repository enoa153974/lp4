---
interface Props {
    title: string;
    gallerys: gallerys[];
}
interface gallerys {
    image: string;
    alt: string;
}

const { title, gallerys } = Astro.props as Props;
---

<section class="gallery l-wrapper pt-20 py-8">
    <div class="l-container">

        <div class="slider l-inner">
            <h2 class="gallery__heading u-heading-line font-bold pb-4">{title}</h2>
            <div class="slider__wrapper flex flex-col pt-8">

                <div class="slider__track autoplay sm:justify-center">
                    {
                        gallerys.map((gallerys: gallerys, i: number) => (
                            <div>
                                <div class="img__wrapper block">
                                    <img src={gallerys.image} alt={gallerys.alt} class="block" />
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>

            <div class="slider__dots flex justify-center items-center"></div>

        </div>
    </div>
</section>

<style>
    @media screen and (width <=47.9375rem) {
        .voices {
            width: 100%;
            height: auto;
            padding-top: 3.125rem;
            padding-bottom: 0;
        }

        .voices .voices__heading span {
            font-size: 1.875rem;
        }

        .voices__heading span:last-child {
            font-size: 1rem;
        }

        .voices__slide {
            max-width: 24.375rem;
        }
    }
</style>

<header class="l-header flex items-center">
    <div class="header__container l-container flex items-center px-6">
        <div class="header__inner flex w-full">
            <a href="#" class="header__logo block flex items-center"><img src="/assets/image/logo.png" alt="" /></a>

            <!-- ハンバーガーボタン（SP用） -->
            <button class="hamburger openbtn" aria-label="メニューを開く">
                <span></span><span></span><span></span>
            </button>

            <!-- メニュー -->
            <!-- PCナビ -->
            <nav class="header__nav pc-nav">
                <ul class="header__nav-inner flex items-center">
                    <li><a href="/src/pages/spec.astro">価格・スペック</a></li>
                    <li><a href="/src/pages/faq.astro">よくあるご質問</a></li>
                </ul>
            </nav>

            <!-- スマホナビ -->
            <nav id="global-nav" class="sp-nav">
                <ul>
                    <li><a href="/">トップ</a></li>
                    <li><a href="/src/pages/spec.astro">価格・スペック</a></li>

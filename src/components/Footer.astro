---
import siteData from '../../siteData.mjs';
---

<footer class="footer bg-accent">
    <div class="footer__inner l-container-full flex items-center justify-center">
        <a href={siteData.spec.path}><p class="color-white">価格・スペック</p></a>
        <span class="ml-4 mr-4 color-white">|</span>
        <a href={siteData.faq.path}><p class="color-white">よくあるご質問</p></a>
    </div>
</footer>

<style>
    .footer {
        height: var(--footer-height);
    }

    .footer__inner {
        height: 100%;
    }

    @media (max-width: 47.9375rem) {
        .footer {
            height: var(--sp-footer-height);
        }

        .footer__inner p {
            font-size: 13px;
        }
    }
</style>
